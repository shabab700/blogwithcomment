
<%- model_class = Post -%>

<div >
    <h1>POSTS</h1>
       <div class="btn btn-primary float-right ml-2">
         <%= link_to "NEW POST",new_post_path,class:'btn btn-primary' %>
      </div>
</div>

  
 
<div class="container">
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:body) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.id, post_path(post) %></td>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%=l post.created_at %></td>
        <td>
<%= link_to t('.Show', :default => t("helpers.links.show")),
                      post_path(post.id), :class => 'btn btn-primary' %>
    <% if current_user == post.user %>                 
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_post_path(post), :class => 'btn btn-primary' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      post_path(post),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
       
        </td>
      </tr>
     
      <% end %>
    <% end %>

  </tbody>
</table>
   