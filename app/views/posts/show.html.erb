<div class="container">
  <div class="col-md-5">
    <div class="card">
      <div class="card-body">
        <%- model_class = Post -%>
          <div class="page-header">
            <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
           </div>

    <dl class="dl-horizontal">
    <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
    <dd><%= @post.title %></dd>
    <dt><strong><%= model_class.human_attribute_name(:body) %>:</strong></dt>
    <dd><%= @post.body %></dd>
    </dl>


      
     <%= link_to t('.back', :default => t("helpers.links.back")),
                    posts_path, :class => 'btn btn-primary'  %>
 <% if current_user == @post.user %>
     <%= link_to t('.edit', :default => t("helpers.links.edit")),
                   edit_post_path(@post), :class => 'btn btn-primary' %>
     <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                    post_path(@post),
                     :method => 'delete',
                     :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
    <%end%>
    </div>
  </div>
</div>

<h2>Comments</h2>
 <%= form_with model: [ @post, @post.comments.build ] do |form| %>
  <%= form.text_area :comment, placeholder: "write a comment here" %>
  <%#= form.hidden_field :user_id, value: current_user.id %><br>
  <%= form.submit "Add comment", class: "btn btn-primary" %>
 <%end%>

<br><br>
   <strong>COMMENTS </strong>

 <%@post.comments.each do |comment| %>
   <div class="container"> 
     <hr class="col-md-5">
       <br>
        <strong><%#=comment.user.email%><%= comment.user.email if comment.user %>  </strong><%= comment.comment%>
     </hr>
   </div>
   
    <% if user_signed_in? && current_user.id == comment.user_id %>
   <p><%= link_to 'Delete', [comment.post, comment], method: :delete, data: 
    { confirm: 'Are you sure?' } %></p>
    <% end %>
 <% end %>
</div>

 