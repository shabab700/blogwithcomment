<div class="container">
  <div class="col-md-5">
  <%= form_for @publisher, :html => { :class => "form-horizontal publisher" } do |f| %>

  <% if @publisher.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@publisher.errors.count, "error") %> prohibited this publisher from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @publisher.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :country, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :country, :class => 'form-control' %>
    </div>
    <%=f.error_span(:country) %>
  </div>
  <div>
   
    
        <%=f.label :"Books"%><br>                          
    <%= f.collection_select(:book_ids, Book.order(:title), :id, :title,
                                    {include_blank: true}, {multiple: true}) %>
  </div> 

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                publishers_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
</div>
</div>