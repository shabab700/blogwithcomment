<div class="container">
<%- model_class = Publisher -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @publisher.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:country) %>:</strong></dt>
  <dd><%= @publisher.country %></dd>
</dl>
<h1>published books</h1>
  <% @publisher.book_publishers.each do |book_publisher| %>
    <li>
      <%= book_publisher.book.title %>
    </li>
  <% end%>

<%= link_to t('.back', :default => t("helpers.links.back")),
              publishers_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_publisher_path(@publisher), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              publisher_path(@publisher),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>